{
  "functions": {
    "api/product-preview.js": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/p/:product",
      "destination": "/api/product-preview?product=:product"
    },
    {
      "source": "/tienda/:store/:product",
      "destination": "/api/product-preview?u=:store&product=:product"
    },
    {
      "source": "/producto/:product",
      "destination": "/api/product-preview?product=:product"
    },
    {
      "source": "/tienda/:store",
      "destination": "/api/product-preview?u=:store"
    }
  ]
}
